{
  "identifier": "robb-j.yaml",
  "name": "YAML",
  "organization": "robb-j",
  "description": "YAML validation based on JSON schemas, including kubernetes",
  "version": "1.0.2",
  "categories": ["completions", "languages", "issues"],
  "license": "MIT",
  "repository": "https://github.com/robb-j/nova-yaml-language-server",
  "bugs": "https://github.com/robb-j/nova-yaml-language-server/issues",

  "main": "main.dist.js",

  "activationEvents": ["onLanguage:yaml", "onWorkspaceContains:*.yaml"],

  "entitlements": {
    "process": true,
    "requests": true,
    "filesystem": "readwrite"
  },

  "commands": {
    "extensions": [
      {
        "command": "robb-j.yaml.reload",
        "title": "Reload Yaml Server"
      },
      {
        "command": "robb-j.yaml.forceClearLock",
        "title": "Reset Yaml Install Lock"
      }
    ]
  }
}
